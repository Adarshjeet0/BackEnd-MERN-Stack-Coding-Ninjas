
<h1 class="mt-5 mb-5">Update Product</h1>
<% if(errors){ %>
    <div class="alert alert-danger" role="alert">
        <%= errors %>
    </div>
<% } %>
<form action="/update-products" method="post">
    <input type="hidden" class="form-control" id="id" name="id" value="<%= product.id %>">
    <div class="mb-4">
        <label for="name" class="form-label fw-bold">Product Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="" value="<%= product.name %>">
    </div>
    <div class="mb-4">
        <label for="desc" class="form-label fw-bold">Product Discription</label>
        <textarea class="form-control" id="disc" name="disc" rows="3"><%= product.disc %></textarea>
    </div>
    <div class="mb-4">
        <label for="price" class="form-label fw-bold">Price</label>
        <input type="text" class="form-control" id="price" name="price" placeholder="" value="<%= product.price %>">
    </div>
    <div class="mb-4">
        <label for="imgUrl" class="form-label fw-bold">Image URL</label>
        <input type="text" class="form-control" id="imgUrl" name="imgURL" placeholder=""value="<%= product.imgURL %>">
    </div>
    <button type="submit" class="btn btn-primary">Add Product</button>
</form>